@{
    List<POS.Domain.Entities.Menu> items = Model;
    List<POS.Domain.Entities.Menu> parents = items.Where(t => !t.ParentId.HasValue || t.ParentId.Value == 0).OrderBy(t => t.Sequence).ToList();
}
<!--begin::Sidebar Wrapper-->
<div class="sidebar-wrapper">
    <nav class="mt-2">
        <!--begin::Sidebar Menu-->
        <ul class="nav sidebar-menu flex-column"
            data-lte-toggle="treeview"
            role="navigation"
            aria-label="Main navigation"
            data-accordion="false"
            id="navigation">
            @* 
            <li class="nav-item">                
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
