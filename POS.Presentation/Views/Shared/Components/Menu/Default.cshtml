                </a>
            </li>
 *@

            @foreach (POS.Domain.Entities.Menu item in parents)
            {
                var childItems = items.Where(t => t.ParentId == item.Id).OrderBy(t => t.Sequence).ToList();
                @* <li class="nav-item menu-open"> *@
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="@item.Ico"></i>
                        <p>
                            @item.Name
                            <i class="nav-arrow bi bi-chevron-right"></i>
                        </p>
                    </a>
                    @if (childItems.Count > 0)
                    {
                        <ul class="nav nav-treeview">
                            @foreach (POS.Domain.Entities.Menu childItem in childItems)
                            {
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="@childItem.Route" asp-action="@childItem.Action" class="nav-link">
                                        <i class="nav-icon bi bi-circle"></i>
                                        <p>@childItem.Name</p>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                </li>
            }

