@model UserListModel

@{
    string screen = Constants.CODE_User;
    ViewData["Title"] = screen;
    var items = Model.Items;
}

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header">
                @* <h3 class="card-title">Users Data</h3> *@
                <a asp-action="Create" class="card-title">Create New</a>
            </div>

            <!-- /.card-header -->
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                RowIndex
                            </th>
                            <th>
                                Username
                            </th>
                            <th>
                                LastLogin
                            </th>
                            <th>
                                IsLogin
                            </th>
                            <th>
                                IsActive
                            </th>
                            <th class="col-actions"></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="align-middle">
                                <td>
                                    @Html.DisplayFor(modelItem => item.RowIndex)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastLogin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsLogin)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @if (Html.AllowEdit(screen).ToString() == "Y")
                                    {
                                        @Html.ActionLink("", "Edit", new { id = item.Username }, new { @class = "bi bi-pencil-square" })
                                    }
                                    @if (Html.AllowDelete(screen).ToString() == "Y")
                                    {
                                        @Html.ActionLink("", "Delete", "User", new { id = item.Username }, new { @class = "bi bi-trash", onclick = "return confirm('Are you sure you want to delete this item?')" })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->

            <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-end">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a asp-action="Index" asp-route-pageIndex="1" class="page-link">&laquo;</a>
                        </li>
                    }
                    @if (Model.TotalPages > 0)
                    {
                        for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item">
                                <a asp-action="Index" asp-route-pageIndex="@i" class="page-link">@i</a>
                            </li>
                        }
                    }
                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a asp-action="Index" asp-route-pageIndex="@Model.TotalPages" class="page-link">&raquo;</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
